@model URLShortener.WebApi.Models.About

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <textarea id="editor">@ViewData["Message"]</textarea>
                <input asp-for="Text" type="submit" value="Save" class="btn btn-primary"/>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
